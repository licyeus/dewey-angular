form(role='form', ng-submit='add.saveBookmark(add.bookmark)')
  .form-group
    label URL
    input.form-control.mousetrap(type='text', ng-model='add.bookmark.href', ng-blur='add.checkIfExists(add.bookmark.href)', autofocus='true')
  .form-group
    label Title
    input.form-control.mousetrap(type='text', ng-model='add.bookmark.description')
  .form-group
    label Tags
    select#tags-input.form-control.mousetrap(multiple='multiple', ng-model='add.bookmark.tags', ng-options='tag as tag for tag in add.tags')
  .form-group
    label Notes
    textarea.form-control.mousetrap(type='text', ng-model='add.bookmark.notes')
  .row
    .col-xs-12
      button.btn.btn-primary.pull-right(type='submit') Save Bookmark

